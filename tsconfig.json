{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "./dist/",
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": [
            "ES2023",
            "DOM",
            "ES2023.Array",
            "ESNext"
        ],
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "shared":["./shared/src"]
        }
    },
    "exclude": [
        "node_modules",
        "assets/*",
        "shared"
    ],
    "include": [
        "src/**/*",
        "src/constant/*"
    ]
}